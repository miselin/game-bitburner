{
  "include": ["NetscriptDefinitions.d.ts", "src/**/*", "scripts/**/*"],
  "exclude": [],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "allowJs": true,
    "jsx": "react",
    "paths": {
      "/*": ["*"],
      "@ns": ["../NetscriptDefinitions.d.ts"],
      "@react": ["lib/react.ts"]
    },
    "types": ["node", "jest"]
  }
}